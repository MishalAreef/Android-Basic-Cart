<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <ImageView
        android:id="@+id/classic_cupcakes"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/classic"
        />

        <ImageView
            android:id="@+id/themed_cupcakes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/themed"
            />

        <ImageView
            android:id="@+id/birthday_cupcakes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/birthday"
            />

        <ImageView
            android:id="@+id/anniversary_cupcakes"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/aclass"
            />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">


    <ImageView
        android:id="@+id/new_baby_cupcakes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/baby"
        />

    <ImageView
        android:id="@+id/valentines_cupcakes"
        android:layout_width="90dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/val"
        />

    <ImageView
        android:id="@+id/graduation_cupcakes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/graduation"
        />

    <ImageView
        android:id="@+id/mothers_day_cupcakes"
        android:layout_width="70dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/mother"
        android:layout_marginStart="16dp"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/premium1_cupcakes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pone"
            />

        <ImageView
            android:id="@+id/premium2_cupcakes"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ptwo"
            />


        <ImageView
            android:id="@+id/premium3_cupcakes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pthree"
            />

        <ImageView
            android:id="@+id/premium4_cupcakes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/premium4"
            />



    </LinearLayout>

</RelativeLayout>